@page
@model Departments.Create

@{
    ViewData["Title"] = "Create";
}

<h2>Create</h2>

<h4>Department</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            @Html.ValidationDiv()
            @Html.FormBlock(m => m.Data.Name)
            @Html.FormBlock(m => m.Data.Budget)
            @Html.FormBlock(m => m.Data.StartDate)
            @Html.FormBlock(m => m.Data.Administrator)
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
